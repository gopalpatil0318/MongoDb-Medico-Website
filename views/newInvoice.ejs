                                <td><input type="text" name="mrp" id="mrp" oninput="updateTotal()" readonly></td>
                                <td><input type="text" name="discount" id="discount" oninput="updateTotal()"></td>
                                <td><input type="text" name="total" id="total" readonly></td>
                                <td>
