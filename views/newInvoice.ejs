            table{
                text-align: left;
            }

            table input, table select{
                width: 95% !important;
            }

            table button{
                height: 50px;
                margin-bottom: 10px;
                margin-right: 10px;
            }

            hr{
                border: 2px solid #f2f2f2;
            }
    
        </style>


</head>

