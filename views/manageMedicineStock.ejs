<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Management System</title>

    <link rel="stylesheet" href="./css/styles.css">
    <link rel="stylesheet" href="./css/addMedicine.css">
    <link rel="stylesheet" href="./css/manageMedicineStock.css">

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,700;0,900;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
</head>

<body>

    <!-- Nav Bar -->
    <div class="big-heading">Medical Management System</div>
    <div class="navbar">
        <a href="/">Dashboard</a>
        <div class="dropdown">
            <button class="dropbtn">Invoice
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="./assets/pages/invoice/newInvoice.html">Add New Invoice</a>
                <a href="./assets/pages/invoice/manageInvoice.html">Manage Invoice</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Customer
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="./assets/pages/customer/addCustomer.html">Add New Customer</a>
                <a href="./assets/pages/customer/manageCustomer.html">Manage Customer</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Medicine
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="/addMedicine">Add New Medicine</a>
                <a href="/manageMedicine">Manage Medicine</a>
                <a href="/manageMedicineStock">Manage Medicine Stock</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Supplier
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="/addSupplier">Add New Supplier</a>
                <a href="/manageSupplier">Manage Supplier</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Purchase
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="/addPurchase">Add New Purchase</a>
                <a href="/managePurchase">Manage Purchase</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Report
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="./assets/pages/report/purchaseReport.html">Purchase Report</a>
                <a href="./assets/pages/report/salesReport.html">Sales Report</a>
            </div>
        </div>

    </div>


    <!-- Manage Medicine  Stock-->
    <div class="main-container">
        <div class="container-heading">Manage Medicine Stock</div>
        <hr>
        <div class="main-content">
            <!-- <form action=""> -->

                <div class="form-two-col">
                    <label> Search :</label>
                    <input type="text" name="medicine_name" id="medicine_name" placeholder="By Medicine Name">
                    <input type="text" name="generic_name" id="generic_name" placeholder="By Generic Name">
                    <input type="text" name="supplier" id="supplier" placeholder="By Supplier Name">
                </div>

                <div class="btn-group">
                    <div class="btn-red">
                        <form action="/outOfStock" method="get">
                            <button type="submit">Out of Stock</button>
                        </form>
                    </div>

                    <div class="btn-yellow">
                        <form action="/expiredMedicine" method="get">
                            <button type="submit">Expired</button>
                        </form>
                    </div>

                    <div class="btn-green">
                        <form action="/manageMedicineStock" method="get">
                            <button type="submit">Refresh</button>
                        </form>
                    </div>
                </div>

                
                <hr>

                

                <div class="table-container">
                    <table>
                        <tr>
                            <th>SL.</th>
                            <th>Medicine Name</th>
                            <th>Packing</th>
                            <th>Generic Name</th>
                            <th>Batch ID</th>
                            <th>Expiry Date</th>
                            <th>Supplier</th>
                            <th>Qty.</th>
                            <th>M.R.P</th>
                            <th>Rate</th>
                            <th>Action</th>
                        </tr>
                        <% medicineStocks.forEach((medicineStock, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= medicineStock.medicineName %>
                                </td>
                                <td>
                                    <%= medicineStock.packing %>
                                </td>
                                <td>
                                    <%= medicineStock.genericName %>
                                </td>
                                <td>
                                    <%= medicineStock.batchId %>
                                </td>
                                <td>
                                    <% if (medicineStock.expirationDate) { %>
                                        <%= medicineStock.expirationDate.toDateString() %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td>
                                    <%= medicineStock.supplier %>
                                </td>
                                <td>
                                    <%= medicineStock.quantity %>
                                </td>
                                <td>
                                    <%= medicineStock.mrp %>
                                </td>
                                <td>
                                    <%= medicineStock.rate %>
                                </td>
                                <td>
                                    <div class="btn-g">
                                        <button class="edit-btn">edit</button>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>


            <!-- </form> -->
        </div>
    </div>

</body>

</html>